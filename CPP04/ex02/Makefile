NAME = Animals

CC = clang++

CFLAGS = -Wall -Wextra -Werror

SRC = Animal.cpp Dog.cpp WrongAnimal.cpp Cat.cpp WrongCat.cpp main.cpp Brain.cpp

OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.cpp.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all re clean fclean